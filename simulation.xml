<?xml version="1.0" encoding="UTF-8"?>
<Simulation>
	<SimulationEnd t="1000" stopdelay="50"/>
	<Standardpixel x="50" y="150" z ="30"/>
	<Detector addrname="Det" outputfile="readhits.dat">
		<ROC queuelength ="4">
			<Pixelcomment> <!-- a For a PPtB ROC, the pixel addresses have to be provided -->
				<Position x="10" y="2" z="7"/>
				<!--<Size x="40" y="60" z="30"/>-->
				<Threshold thr="1"/>
				<Efficiency n="1.0"/>				
			</Pixelcomment>
			<NTimes n="10" x="55" y="0" z="0"> <!-- not possible for PPtB ROCs -->
				<Pixel>
					<Position x="60" y="2" z="7"/>
					<!--<Size x="40" y="60" z="30"/>-->
					<Threshold thr="1"/>
					<Efficiency n="1.0"/>				
				</Pixel>
				<!-- only the last pixel object will be used -->
			</NTimes>
		</ROC>
		<ROC queuelength="4">
			<NTimes n="10" x="55" y="0" z="0"> <!-- not possible for PPtB ROCs -->
				<Pixel>
					<Position x="60" y="160" z="7"/>
					<!--<Size x="40" y="60" z="30"/>-->
					<Threshold thr="1"/>
					<Efficiency n="1.0"/>				
				</Pixel>
				<!-- only the last pixel object will be used -->
			</NTimes>
		</ROC>
		<ROC queuelength="4">
			<NTimes n="10" x="55" y="0" z="0"> <!-- not possible for PPtB ROCs -->
				<Pixel>
					<Position x="60" y="320" z="7"/>
					<!--<Size x="40" y="60" z="30"/>-->
					<Threshold thr="1"/>
					<Efficiency n="1.0"/>				
				</Pixel>
				<!-- only the last pixel object will be used -->
			</NTimes>
		</ROC>
	</Detector>
	<EventGenerator>
		<Seed x0="0"/>
		<Output filename="eventgen.dat"/>
		<EventRate f="0.1"/>
		<ClusterSize sigma="20"/>
		<CutOffFactor numsigmas="5"/>
		<InclinationSigma sigma="0.15"/>
		<ChargeScale scale="1"/>
		<MinSize diagonal="2."/>
		<NumEvents n="50"/>
		<EventStart t="0"/>
	</EventGenerator>
</Simulation>